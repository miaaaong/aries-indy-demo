{{> component_nav moreNavLinks=navLinks}}

<div class="content">
    <div class="container">
        <form novalidate autocomplete="off" method="POST" , action="/definitions/new">
            <div class="form-group">
                <label for="definitionObject">Enter New Definition :</label>
                <textarea class="form-control {{#if errors}}is-invalid{{/if}}" id="definitionObject"
                    name="definition_object" cols="30" rows="10">{{definition}}</textarea>
                {{#if errors}}
                <div class="invalid-feedback d-block">
                    {{#each errors}}
                    <div>{{ this.msg }}</div>
                    {{/each}}
                </div>
                {{/if}}
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">
                Create Definition
            </button>
        </form>
    </div>
</div>
